@model FarmaciaApp.Models.Medicamento

@{
    ViewData["Title"] = "Deletar Medicamento";
}

<h2>Deletar Medicamento</h2>

<h3>Tem certeza de que deseja deletar este medicamento?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NumeroRegistroAnvisa)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NumeroRegistroAnvisa)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataValidade)</dt>
        <dd class="col-sm-10">@(Model.DataValidade.ToString("dd/MM/yyyy"))</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TelefoneSAC)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TelefoneSAC)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Preco)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preco)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.QuantidadeComprimidos)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.QuantidadeComprimidos)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Fabricante.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Fabricante.Nome)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
