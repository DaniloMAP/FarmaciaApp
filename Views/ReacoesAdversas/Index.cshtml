@model IEnumerable<FarmaciaApp.Models.ReacaoAdversa>

@{
    ViewData["Title"] = "Lista de Reações Adversas";
}

<h2>Lista de Reações Adversas</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
